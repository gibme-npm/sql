{
  "name": "@gibme/sql",
  "version": "20.1.1",
  "description": "A simple helper/wrapper for common DBMS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./mysql": "./dist/mysql.js",
    "./mariadb": "./dist/mariadb.js",
    "./postgres": "./dist/postgres.js",
    "./sqlite": "./dist/sqlite.js",
    "./database": "./dist/database.js"
  },
  "typesVersions": {
    "*": {
      "mysql": [
        "./dist/mysql.d.ts"
      ],
      "mariadb": [
        "./dist/mariadb.d.ts"
      ],
      "postgres": [
        "./dist/postgres.d.ts"
      ],
      "sqlite": [
        "./dist/sqlite.d.ts"
      ],
      "database": [
        "./dist/database.d.ts"
      ]
    }
  },
  "files": [
    "dist/*"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn build:typescript",
    "build:docs": "./node_modules/.bin/typedoc",
    "build:typescript": "./node_modules/.bin/tsc",
    "test": "yarn test:style && yarn test:typecheck && yarn test:mocha",
    "test:typecheck": "./node_modules/.bin/tsc --noEmit",
    "test:style": "yarn style",
    "test:mocha": "./node_modules/.bin/mocha --exit --timeout 360000 --require ts-node/register test/test.ts",
    "style": "./node_modules/.bin/eslint src/**/*.ts test/**/*.ts",
    "fix-style": "./node_modules/.bin/eslint --fix src/**/*.ts test/**/*.ts",
    "fix:style": "yarn fix-style",
    "prepublishOnly": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gibme-npm/sql.git"
  },
  "bugs": {
    "url": "https://github.com/gibme-npm/sql/issues"
  },
  "homepage": "https://gibme-npm.github.io/sql/",
  "engines": {
    "node": ">=20"
  },
  "engineStrict": true,
  "author": {
    "name": "Brandon Lehmann",
    "email": "brandonlehmann@gmail.com"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/pg": "^8.15.5",
    "@types/pg-format": "^1.0.5",
    "@types/sqlstring": "^2.3.2",
    "async-mutex": "^0.5.0",
    "better-sqlite3": "^12.2.0",
    "mariadb": "^3.4.5",
    "pg": "^8.16.3",
    "pg-format": "^1.0.4",
    "sqlstring": "^2.3.3"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "dotenv": "^16.5.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^11.7.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.4",
    "typescript": "^5.9.2"
  }
}
